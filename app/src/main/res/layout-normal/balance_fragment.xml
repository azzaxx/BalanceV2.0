<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/stones2"
    android:clickable="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/button_container"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/left_round"
            android:text="@string/cancel"
            android:textAllCaps="false"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/button_done"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/right_round"
            android:text="@string/done"
            android:textAllCaps="false"
            android:textColor="@color/white" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/date_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/text_container"
        android:layout_alignLeft="@+id/text_container"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/text_container"
        android:layout_alignStart="@+id/text_container"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="6dp">

        <TextView
            android:id="@+id/date_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/date_month"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="12dp"
            android:layout_toRightOf="@+id/date_month"
            android:text="2017"
            android:textColor="@color/white"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/date_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/date_month"
            android:layout_alignBottom="@+id/date_month"
            android:layout_margin="8dp"
            android:layout_toLeftOf="@+id/date_month"
            android:layout_toStartOf="@+id/date_month"
            android:text="26"
            android:textColor="@color/white"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/date_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="April"
            android:textColor="@color/white"
            android:textSize="32sp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/text_container"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/date_container"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="64dp"
        android:layout_marginRight="64dp"
        android:background="@drawable/round_corners"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:id="@+id/total_sum_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="end|center"
            android:text="0.00"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <RelativeLayout
            android:id="@+id/del_one_button"
            android:layout_width="64dp"
            android:layout_height="64dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_backspace_black_24dp" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/expandable_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/button_container"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/text_container"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="6dp"
        android:gravity="center|top"
        android:orientation="vertical">

        <net.cachapa.expandablelayout.ExpandableLayout
            android:id="@+id/category_expand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            app:el_duration="200"
            app:el_expanded="false">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/keyboard_button"
                    android:layout_width="170dp"
                    android:layout_height="42dp"
                    android:layout_gravity="center"
                    android:background="@drawable/solid_round"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/image_keyboard_button"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="22dp"
                        android:layout_marginRight="22dp"
                        android:src="@drawable/ic_keypad_primary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="@string/keyboard"
                        android:textColor="@color/white" />

                </LinearLayout>

            </FrameLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler11"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="52dp" />

        </net.cachapa.expandablelayout.ExpandableLayout>

        <net.cachapa.expandablelayout.ExpandableLayout
            android:id="@+id/keyboard_expand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="8dp"
            app:el_duration="200"
            app:el_expanded="true">

            <RelativeLayout
                android:id="@+id/keyboard_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/button_container"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="48dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/b1"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/round_primary"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/b2"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_margin="2dp"
                    android:layout_toRightOf="@id/b1"
                    android:background="@drawable/round_primary"
                    android:gravity="center"
                    android:text="2"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/b3"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_alignParentTop="true"
                    android:layout_margin="2dp"
                    android:layout_toEndOf="@+id/b2"
                    android:layout_toRightOf="@+id/b2"
                    android:background="@drawable/round_primary"
                    android:gravity="center"
                    android:text="3"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/b4"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_below="@id/b1"
                    android:layout_margin="2dp"
                    android:background="@drawable/round_primary"
                    android:gravity="center"
                    android:text="4"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/b5"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_below="@id/b2"
                    android:layout_margin="2dp"
                    android:layout_toRightOf="@id/b4"
                    android:background="@drawable/round_primary"
                    android:gravity="center"
                    android:text="5"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/b6"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_below="@id/b3"
                    android:layout_margin="2dp"
                    android:layout_toRightOf="@id/b5"
                    android:background="@drawable/round_primary"
                    android:gravity="center"
                    android:text="6"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/b7"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_below="@id/b4"
                    android:layout_margin="2dp"
                    android:background="@drawable/round_primary"
                    android:gravity="center"
                    android:text="7"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/b8"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_below="@id/b5"
                    android:layout_margin="2dp"
                    android:layout_toRightOf="@id/b4"
                    android:background="@drawable/round_primary"
                    android:gravity="center"
                    android:text="8"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/b9"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_below="@id/b6"
                    android:layout_margin="2dp"
                    android:layout_toRightOf="@id/b5"
                    android:background="@drawable/round_primary"
                    android:gravity="center"
                    android:text="9"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/b_clear"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_alignParentTop="true"
                    android:layout_margin="2dp"
                    android:layout_toEndOf="@+id/b6"
                    android:layout_toRightOf="@+id/b6"
                    android:background="@drawable/round_primary"
                    android:gravity="center"
                    android:text="C"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/b0"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_below="@id/b6"
                    android:layout_margin="2dp"
                    android:layout_toRightOf="@id/b9"
                    android:background="@drawable/round_primary"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

            </RelativeLayout>

            <EditText
                android:id="@+id/et_comments"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:background="@drawable/solid_light_round_corners"
                android:gravity="center"
                android:hint="@string/type_notes_here"
                android:inputType="textShortMessage"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textColorHint="#88FFFFFF"
                android:textSize="16sp" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="260dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/category_button"
                    android:layout_width="170dp"
                    android:layout_height="42dp"
                    android:layout_gravity="center"
                    android:background="@drawable/solid_round"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/image_category_button"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="22dp"
                        android:layout_marginRight="22dp"
                        android:src="@drawable/ic_tag_primary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:layout_toRightOf="@id/image_category_button"
                        android:gravity="center"
                        android:text="@string/category_without_dots"
                        android:textColor="@color/white" />

                </LinearLayout>

            </FrameLayout>

        </net.cachapa.expandablelayout.ExpandableLayout>

    </LinearLayout>

</RelativeLayout>