<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/stones2"
    android:clickable="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/button_container"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_done"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/left_round"
            android:text="@string/done"
            android:textAllCaps="false"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/button_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/right_round"
            android:text="@string/cancel"
            android:textAllCaps="false"
            android:textColor="@color/white" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/switch_button_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/date_container"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/keyboard_button"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/round_white">

            <ImageView
                android:id="@+id/image_keyboard_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_keypad" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/notes_button"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:background="@drawable/round">

            <ImageView
                android:id="@+id/image_notes_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_underline_button_primary" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/category_button"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/round">

            <ImageView
                android:id="@+id/image_category_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_tag_primary" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/text_container"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_below="@id/switch_button_container"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="56dp"
        android:layout_marginRight="56dp"
        android:background="@drawable/round_corners"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:id="@+id/total_sum_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="end|center"
            android:text="0.00"
            android:textColor="@color/white"
            android:textSize="22sp" />

        <RelativeLayout
            android:id="@+id/del_one_button"
            android:layout_width="64dp"
            android:layout_height="64dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_backspace_black_24dp" />

        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/date_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/text_container"
        android:layout_alignLeft="@+id/text_container"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/text_container"
        android:layout_alignStart="@+id/text_container"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/date_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/date_month"
            android:layout_alignRight="@+id/date_month"
            android:layout_below="@+id/date_month"
            android:layout_marginRight="12dp"
            android:text="2017"
            android:textColor="@color/white"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/date_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/date_month"
            android:layout_alignBottom="@+id/date_month"
            android:layout_margin="8dp"
            android:layout_toLeftOf="@+id/date_month"
            android:layout_toStartOf="@+id/date_month"
            android:text="26"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/date_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="April"
            android:textColor="@color/white"
            android:textSize="36sp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/expandable_container"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_above="@+id/button_container"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:orientation="horizontal">

        <net.cachapa.expandablelayout.ExpandableLayout
            android:id="@+id/edit_expand"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="56dp"
            android:paddingRight="56dp"
            app:el_duration="200"
            app:el_expanded="false">

            <EditText
                android:id="@+id/et_comments"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/solid_light_round_corners"
                android:gravity="center"
                android:hint="Type notes here"
                android:inputType="text"
                android:textColor="@color/white"
                android:textColorHint="#88FFFFFF" />

        </net.cachapa.expandablelayout.ExpandableLayout>

        <net.cachapa.expandablelayout.ExpandableLayout
            android:id="@+id/keyboard_expand"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:el_duration="200"
            app:el_expanded="true">

            <RelativeLayout
                android:id="@+id/keyboard_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/button_container"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:gravity="center">

                <TextView
                    android:id="@+id/b1"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/round"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/b2"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_margin="2dp"
                    android:layout_toRightOf="@id/b1"
                    android:background="@drawable/round"
                    android:gravity="center"
                    android:text="2"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/b3"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_alignParentTop="true"
                    android:layout_margin="2dp"
                    android:layout_toEndOf="@+id/b2"
                    android:layout_toRightOf="@+id/b2"
                    android:background="@drawable/round"
                    android:gravity="center"
                    android:text="3"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/b4"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_below="@id/b1"
                    android:layout_margin="2dp"
                    android:background="@drawable/round"
                    android:gravity="center"
                    android:text="4"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/b5"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_below="@id/b2"
                    android:layout_margin="2dp"
                    android:layout_toRightOf="@id/b4"
                    android:background="@drawable/round"
                    android:gravity="center"
                    android:text="5"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/b6"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_below="@id/b3"
                    android:layout_margin="2dp"
                    android:layout_toRightOf="@id/b5"
                    android:background="@drawable/round"
                    android:gravity="center"
                    android:text="6"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/b7"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_below="@id/b4"
                    android:layout_margin="2dp"
                    android:background="@drawable/round"
                    android:gravity="center"
                    android:text="7"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/b8"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_below="@id/b5"
                    android:layout_margin="2dp"
                    android:layout_toRightOf="@id/b4"
                    android:background="@drawable/round"
                    android:gravity="center"
                    android:text="8"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/b9"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_below="@id/b6"
                    android:layout_margin="2dp"
                    android:layout_toRightOf="@id/b5"
                    android:background="@drawable/round"
                    android:gravity="center"
                    android:text="9"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/b_clear"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_alignParentTop="true"
                    android:layout_margin="2dp"
                    android:layout_toEndOf="@+id/b6"
                    android:layout_toRightOf="@+id/b6"
                    android:background="@drawable/round"
                    android:gravity="center"
                    android:text="C"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/b0"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_below="@id/b6"
                    android:layout_margin="2dp"
                    android:layout_toRightOf="@id/b9"
                    android:background="@drawable/round"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

            </RelativeLayout>

        </net.cachapa.expandablelayout.ExpandableLayout>

        <net.cachapa.expandablelayout.ExpandableLayout
            android:id="@+id/category_expand"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            app:el_duration="200"
            app:el_expanded="false">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/solid_light_round_corners">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/add_new_category"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:gravity="center"
                        android:text="Press here to add new category"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="8dp"
                        android:background="@color/black" />

                    <LinearLayout
                        android:id="@+id/ll_category"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="top"
                        android:orientation="vertical">

                    </LinearLayout>

                </LinearLayout>
            </ScrollView>

        </net.cachapa.expandablelayout.ExpandableLayout>

    </LinearLayout>

</RelativeLayout>