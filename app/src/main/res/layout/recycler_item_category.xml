<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/recycler_item_category_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/recycler_item_category_image_container"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="center"
        android:layout_marginTop="4dp"
        android:background="@drawable/round_primary">

        <ImageView
            android:id="@+id/recycler_item_category_image"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_add_orange_24dp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/recycler_item_category_name_text"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_gravity="center"
        android:layout_marginTop="4dp"
        android:lines="2"
        android:text="Add category"
        android:textColor="@color/orange"
        android:textSize="12sp" />

</LinearLayout>